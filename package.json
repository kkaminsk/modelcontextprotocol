{
  "name": "@perplexity-ai/mcp-server",
  "version": "0.2.2",
  "description": "Official MCP server for Perplexity API Platform",
  "keywords": [
    "ai",
    "perplexity",
    "mcp",
    "modelcontextprotocol"
  ],
  "homepage": "https://docs.perplexity.ai/guides/mcp-server",
  "bugs": {
    "url": "https://github.com/perplexityai/modelcontextprotocol/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perplexityai/modelcontextprotocol.git"
  },
  "license": "MIT",
  "author": "Perplexity <>",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "perplexity-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "build:installer": "powershell -ExecutionPolicy Bypass -File installer/Build-Installer.ps1",
    "build:installer:clean": "powershell -ExecutionPolicy Bypass -File installer/Build-Installer.ps1 -Clean",
    "prepare": "npm run build",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "axios": "^1.13.2",
    "dotenv": "^16.3.1",
    "openspec": "^0.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
